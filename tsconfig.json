{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
}